<div class="container">
  <h1 class="text-center"><%= current_user.email %></h1>
    <div class="col-md-8 center box">
      <table class="table table-hover">
        <thead>
          <td class="text-center"><h4>To-Do</h4></td>
          <td class="text-center"><h4>Completed</h4></td>
        </thead>
        <tbody>
          <% if @items.any? %>
            <%= render @user.items %>
          <% end %>
            <%= render partial: 'items/form', locals: { user: @user, item: @item} %>
        </tbody>
      </table>
    </div>
</div>
